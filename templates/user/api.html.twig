            <h5 class="card-title"> {{ branch.name }} </h5>
            {% for hours in branch.openingHours %}
              <h5 class="card-text">Day {{ hours.day }}:</h5>
              <p class="card-text">{{ hours.open }} - {{ hours.close }}</p>
            {% endfor %}
            <a href={{ branch.odkaz }} class="btn btn-primary">Detail</a>
          </div>
        </div>
      {% endfor %}
    </ul>
    

